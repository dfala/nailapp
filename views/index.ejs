<!DOCTYPE html>
<html ng-app="NailChatApp">
  <head>
    <meta charset="utf-8">
    <title>NailChat</title>
    <link rel="stylesheet" href="bootstrap.min.css" media="screen" charset="utf-8">
    <link rel="stylesheet" href="styles.css" media="screen" charset="utf-8">
    <link rel="stylesheet" href="animate.css" media="screen" charset="utf-8">
  </head>
  <body>

    <section class="container" ng-controller="ChatController">

      <div class="messages" id="messages">
        <div ng-cloak ng-repeat="message in thread">
          <div class="message alert alert-info animated-fast fadeIn" ng-if="message.sender == 'user'" id="incoming-message">
              {{message.text}}
          </div>

          <div class="message alert alert-success animated-fast fadeIn" ng-if="message.sender == 'bot'" id="response">
              {{message.text}}
              <img class="gif" ng-src="{{message.img}}">
          </div>
        </div>

        <div class="message alert alert-success animated-fast fadeIn" ng-if="loading" id="response">
          <img class="loading-gif" src="loading.gif">
        </div>
      </div>

      <form class="form" ng-submit="newMessage(reply)" autocomplete="off">
        <div class="form-group">
          <input type="text" class="form-control" id="exampleInputEmail1"
          ng-model="reply" placeholder="Tell me how you feel..." autofocus>
        </div>
        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
      </form>

    </section>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="app.js" charset="utf-8"></script>

    <img class="hidden" src='https://media.giphy.com/media/2WxWfiavndgcM/giphy.gif' />
    <img class="hidden" src='https://media.giphy.com/media/Ty9Sg8oHghPWg/giphy.gif' />
    <img class="hidden" src='https://media.giphy.com/media/MuztdWJQ4PR7i/giphy.gif' />
    <img class="hidden" src='https://media0.giphy.com/media/10bDoTtJhtcHu0/giphy.gif' />
  </body>
</html>
